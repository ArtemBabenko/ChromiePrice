<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FormFragment">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/form_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/button_group"
            tools:ignore="NotSibling" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/item_layout"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/form_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_dialog"
            android:gravity="top"
            android:padding="8dp"
            android:text="@string/ok"
            android:textColor="@color/item_text"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/form_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/form_btn_ok"
            android:background="@drawable/button_dialog"
            android:gravity="top"
            android:padding="8dp"
            android:text="@string/cancel"
            android:textColor="@color/item_text"
            android:textSize="16dp" />

    </RelativeLayout>

</FrameLayout>